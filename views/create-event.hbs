<body onload="load()">
  <div class="loading">
    <span class="bder"></span>
    <span class="bder"></span>
</div>
    <div class="mob-image">

    </div>
    <div class="imag">
    </div>
    <div class="main">
        <div class="display-4">Create Gaming Event</div>
        <form action="/events"  enctype="multipart/form-data" method="POST">
            <div class="form-group">
             <label >Event Name</label>
            <input name="EventName" type="text" class="form-control" placeholder="" required>
            </div>
            <div class="form-group">
                <label >Game</label>
               <input name="Game" type="text" class="form-control" placeholder="" required>
               </div>
               <div class="form-group">
                <label >Date of Event</label>
               <input name="Date" type="date" class="form-control" placeholder="" required>
               </div>       
               <div class="form-group">
                <label >Description</label>
                <textarea name="Description" class="form-control" id="exampleFormControlTextarea1" rows="3" required></textarea>
               </div>      
  <div class="form-group">
    <label for="exampleFormControlFile1">Event Poster</label>
    <input type="file" name="myFile" class="form-control-file" id="exampleFormControlFile1" accept="image/x-png,image/gif,image/jpeg,image/jpg" onchange="checkextension()" required>
  </div>   
               <h1 class="display-5">Organiser Contact</h1>           
            <div class="form-group">
              <label for="exampleInputEmail1">Email address</label>
              <input name="Email" type="email" class="form-control" value="{{email}}" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="" readonly required>
            </div>
            <div class="form-group">
                <label >Mobile Number</label>
               <input name="Mobile" type="text" maxlength="10" class="form-control" placeholder="" value="{{mobile}}" required pattern="[1-9]{1}[0-9]{9}" title="Must be a valid mobile number">
               </div> 

            <button type="submit" class="btn btn-outline-success btn-block">CREATE</button>
          </form>
          <div class="home">

            <i class="fas fa-long-arrow-alt-left"></i> <a href="/">Back to Home</a>
          </div>
          <div class="e"><a href="#"><i class="fas fa-edit"></i><span class="e1">{{error}}</span></a></div>
          
</div>

<div class="modal  logout" id="exampleModal1" tabindex="-1" data-backdrop="static" data-keyboard="false" role="dialog" aria-labelledby="exampleModalLabel1" aria-hidden="false">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <div class="modal-body">
         <p>You need to sign to create an event!</p>
               <div class="modal-footer">
               
                <div>
                <a href="/login"><button type="submit" class="btn btn-outline-success ">Sign-In</button></a> 
               <a href="/"> <button type="button" class="btn btn-danger" >Close</button></a>
               </div>
             </div>
        </div>
      </div>
    </div>
  </div>
